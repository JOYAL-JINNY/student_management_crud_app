<h3>✏️ Edit  Student DETAILS</h3>
{{#if msg}}
<div class="alert">
{{msg}}
</div>
{{/if}}
{{#each rows}}
<form method="post" action="/edituser/{{this.ID}}">

  <div class="form-container">
    
      <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required  value="{{this.NAME}}" />
      </div>

      <div class="form-group">
        <label for="adminno">ADMIN NUMBER:</label>
        <input type="text" id="adminno" name="adminno" required value="{{this.ADMINNO}}" />
      </div>
      <div class="form-group">
        <label for="year">ADMIN YEAR:</label>
        <input type="date" id="year" name="year" required value="{{this.ADMINYEAR}}" />
      </div>

       <div class="form-group">
        <label for="course">COURSE:</label>
        <input type="text" id="course" name="course" required value="{{this.COURSE}}"/>
      </div>

      <button type="submit" class="save-button">Save changes</button>
    <button class="back"><a href="/" >View </a>⬅</button>
  </div>
</form>
{{/each}}

